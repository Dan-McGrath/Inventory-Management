extends layout 

block content 
    h1 #{title}

    form(method="POST" action='')
        .form-group
            label(for='name') Category: 
            input#name(type='text' placeholder="Entree, Drink etc." name='name' required='true' value=(undefined===category ? '' : category.name))
        button.btn.btn-submit(type='submit') Submit 
    
    if errors 
        ul 
            for error in errors 
                li!= error.msg